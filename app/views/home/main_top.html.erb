<h1>利用者トップページ</h1>

<% @random_new_books.each do |book| %>
<%= book.title %>
<br>
<% end %>

<div class="row p-5 ">
    <div class="col-12 col-sm-8 border">
        <div class= "text-center h3">新刊紹介</div>
        <div class="row border">
             <div class="col">
                <table class="tag">
                    <div class="">
                        <div>
                             <%  @random_new_books.each do |new_book| %>
                                <tr>
                                    <% if new_book.bookcover.present? %>
                                        <td><%= image_tag new_book.bookcover, :width => '200' %></td>
                                    <% else %>
                                        <td></td>
                                    <% end %>
                                </tr>
                            <% end %>
                        </div>
                        <div class="">
                            <% @random_new_books.each do |new_book| %>
                            
                            <tr><th style="text-align: right;"><span>ISBN番号 :</span></th><td><%=new_book.isbn_number %></td></tr>
                            <tr><th><span>タイトル :</span></th><td><%=new_book.title %></td></tr>
                            <tr><th>著者名 :</th><td><%= new_book.author_name %></td></tr>
                            <tr><th>入刊日 :</th><td><%= new_book.arrival_day.to_s %></td></tr>
                            <% if new_book.lending == 0 %>
                                <tr><th>貸出 可/不 :</th><td><span class="text-primary">可</span></td></tr>
                            <% elsif new_book.lending == 1 %>
                                <tr><th>貸出 可/不 :</th><td><span class="text-danger">不</span></td></tr>
                            <% end %><br>
                            <tr><th>在館冊数 :</th><td><%= new_book.book_number.to_s %></td></tr>
                            <tr><th>ジャンル :</th><td><%=new_book.genre %></td></tr>
                            <% end %>
                        </div>
                    </div>
                </table>
             </div>
        </div>
        <div class="row border">
            <button class="col text-center btn btn-info m-3">もっと見る</button>
            <button class="col text-center btn btn-info m-3"><a href="/requests/isbn_search">リクエスト</a></button>
        </div>
        
        <div class="">
            <div class= " text-center h3">図書館司書おすすめの本</div>
            <div class="row border">
                <% @all_recommend_books.each do |recommend_book| %>
                    <div class="col">
                        <%= "ISBN番号 : " + recommend_book.ISBN_number %><br>
                        <%= "タイトル : " + recommend_book.title %><br>
                        <%= "著者名 : " + recommend_book.author_name %><br>
                        <%= "おすすめ理由 : " + recommend_book.recommend %><br>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="row border">
            <button class="col text-center btn btn-info m-3">設定</button>
            <button class="col text-center btn btn-info m-3">処分本リスト</button>
        </div>
    </div>

    <div class="col-12 col-sm-4 border d-flex flex-column bd-highlight mb-3">
        <div class="border"></div>
        <div class="p-2 bd-highlight">
         <div class="text-center h3">月間ランキング</div>

            <% if @first_rankings.bookcover.present? %>
                <td><%= image_tag @first_rankings.bookcover, :width => '200' %></td>
            <% end %>
            <br>

            <%= "ISBN番号 : " + @first_rankings.isbn_number %><br>
            <%= "書籍名 : " + @first_rankings.title %><br>
            <%= "著者名 : " + @first_rankings.author_name %><br>
            <%= "ランキング : " + @first_rankings.book_rank.to_s %><br>
        </div>
        <div class="p-2 bd-highlight">
            <% if @second_rankings.bookcover.present? %>
                <td><%= image_tag @second_rankings.bookcover, :width => '200' %></td>
            <% end %>
            <br>
            <%= "ISBN番号 : " + @second_rankings.isbn_number %><br>
            <%= "書籍名 : " + @second_rankings.title %><br>
            <%= "著者名 : " + @second_rankings.author_name %><br>
            <%= "ランキング : " + @second_rankings.book_rank.to_s %><br>
        </div>
        <div class="p-2 bd-highlight">
            <% if @third_rankings.bookcover.present? %>
                <td><%= image_tag @third_rankings.bookcover, :width => '200' %></td>
            <% end %>
            <br>
            <%= "ISBN番号 : " + @third_rankings.isbn_number %><br>
            <%= "書籍名 : " + @third_rankings.title %><br>
            <%= "著者名 : " + @third_rankings.author_name %><br>
            <%= "ランキング : " + @third_rankings.book_rank.to_s %><br>
        </div>
    </div>
</div>











