<p id="notice"><%= notice %></p>

<h1>処分本一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ISBN番号</th>
      <th>書籍名</th>
      <th>著者名</th>
      <th>状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealings.each do |dealing| %>
      <tr>
        <td><%= dealing.isbn_number %></td>
        <td><%= dealing.title %></td>
        <td><%= dealing.author_name %></td>
        <td><%= dealing.condition %></td>
        <td><%= button_to '詳細', dealing , {method: :get, class: 'btn btn-outline-dark'} %></td>
        <td><%= button_to '編集', edit_dealing_path(dealing), {method: :get, class: 'btn btn-outline-dark'} %></td>
        <td><%= button_to '削除', dealing, class: 'btn btn-outline-dark', method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

