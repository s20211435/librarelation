<%= form_with(model: dealing) do |form| %>
  <% if dealing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dealing.errors.count, "エラー") %> prohibited this dealing from being saved:</h2>

      <ul>
        <% dealing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "ISBN番号" %>
    <%= form.text_field :isbn_number %>
  </div>

  <div class="field">
    <%= form.label "書籍名" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label "著者名" %>
    <%= form.text_field :author_name %>
  </div>

  <div class="field">
    <%= form.label "状態" %>
    <%= form.number_field :condition %>
  </div>

  <div>
    <p>状態　1:良い　2:悪い　3:不明</p>
  </div>

  <div class="actions">
    <%= form.submit "登録"%>
  </div>
<% end %>
