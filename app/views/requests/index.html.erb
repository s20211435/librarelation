<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Isbn number</th>
      <th>Title</th>
      <th>Author name</th>
      <th>Reason</th>
      <th>Grade</th>
      <th>Kumi</th>
      <th>Number</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.isbn_number %></td>
        <td><%= request.title %></td>
        <td><%= request.author_name %></td>
        <td><%= request.reason %></td>
        <td><%= request.grade %></td>
        <td><%= request.kumi %></td>
        <td><%= request.number %></td>
        <td><%= request.name %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

