<p id="notice"><%= notice %></p>

<h1>おすすめ本</h1>

<table>
  <thead>
    <tr>
      <th>ISBN番号</th>
      <th>書籍名</th>
      <th>著者名</th>
      <th>おすすめ理由</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommend_books.each do |recommend_book| %>
      <tr>
        <td><%= recommend_book.ISBN_number %></td>
        <td><%= recommend_book.title %></td>
        <td><%= recommend_book.author_name %></td>
        <td><%= recommend_book.recommend %></td>
        <td><%= link_to '詳細', recommend_book %></td>
        <td><%= link_to '編集', edit_recommend_book_path(recommend_book) %></td>
        <td><%= link_to '削除', recommend_book, method: :delete, data: { confirm: 'ほんとにいいの？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_recommend_book_path %>
